@import '../lib/normalize.styl'
@import '../lib/vendor.styl'

global-reset()

$font-short = 14px
$font-normal = 18px
$font-big = 20px
$font-bigs = 24px
$font-superbig = 36px
$font-color = #FF6699
$font-green = #66CCCC

$bg-color = #E7E7E7
$solid-gray = #D6D3D3

[v-cloak] {
  display none
}

@font-face {
  font-family CenturyGothic
  src url(../font/CenturyGothic.ttf)
}

strong {
  font-weight bolder
}

.text_blank {
  color #000000 !important
}

.bolder {
  font-weight bolder
}

.italic {
  font-style italic
}

a {
  color #000
  text-decoration none !important
}

a.btn_a {
  display block
  width 290px
  height 65px
  text-align center
  line-height 65px
  background-color: #000
  margin 30px auto 0
  color #fff
  position relative
  z-index 10
}

a.btn_a::before {
  content ""
  width 90%
  position absolute
  bottom 0
  height 80%
  border-radius 100%
  box-shadow 0 0 20px 6px #000
  z-index -10
  left 50%
  transform translateX(-50%)
}

body {
  font-family "Roboto", Arial, "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.clearfix {
  zoom 1
}

.clearfix:before,
.clearfix:after {
  display: table;
  line-height: 0;
  content: "";
}

.clearfix:after {
  clear: both;
}

.pull-left {
  float left
}

.pull-rigth {
  float right
}

.text_success {
  color $font-green
}

.text_info {
  color $font-color
}

.fixed_top {
  position fixed !important
  top 0
  left 0
  z-index 1000
}

#go_top {
  width 70px
  height 70px
  background rgb(0, 0, 0) url(../../img/go_top.png) no-repeat center
  background-size 70%
  border-radius 10px
  position fixed
  right 100px
  bottom 100px
  z-index 1000
  transition all 0.5s
  opacity 0
}

#go_top.show {
  opacity 1
}

#header {
  background-color #fff
  width 100%
  height 100px

  .headerwarp {
    width 100%
    height 100px
    background-color #fff
    box-shadow 0 2px 10px #5d595a
    position static
  }

  .container {
    background-color: #fff
    .menu {
      display flex
      align-items center
      nav {
        padding-left 20px
        font-weight bolder
        font-size $font-short
        .firstMenu {
          float left
          position relative
        }
        .firstMenu > a {
          display block
          padding 0 18px
          text-align: left;
          font-family: Arial-Black;
          height 100px
          line-height 100px

          i {
            transition all 0.2s
            display inline-block
          }
          i.active {
            transform rotate(180deg)
            color $font-color
          }
        }
        .dropDown {
          display none
          position absolute
          top 100%
          z-index 100
          margin-top 1px
          background #ffffff
          padding 0 25px 20px 20px
          a {
            line-height 30px
            white-space nowrap
          }
          a:hover {
            color $font-color
          }
        }
      }

    }
    .language {
      float right
      position relative
      .currentLan {
        line-height 95px
        position
        display flex
        align-items center
        img {
          width 100%
          height: 100%
        }

        span {
          margin 0 5px
        }

        i {
          font-size $font-short
          display inline-block
          transition all 0.2s
          &.active {
            transform rotate(180deg)
          }
        }
      }
      .dropDown {
        position absolute
        background-color: #fff;
        right 0
        display none
        z-index: 100;

        p {
          padding 15px
          white-space nowrap
          cursor pointer
          display flex

          span {
            margin-left 10px
          }
        }
      }
    }
  }
}

.container {
  margin 0 auto
  width 1200px
  height 100%
}

.containerBig {
  width 1583px
  margin 0 auto
}

.qualityBg {
  min-width 1600px
}

#footer {
  background-color: #fff
  .footMenuWrap {
    background #F4F3F3
    p {
      line-height 1.5
    }

    .container {
      padding 30px 0
      display flex
      justify-content space-between
    }

    .foot_menu {
      li {
        padding-right 50px
        padding-bottom 21px
      }
    }

    .foot_info {
      width 440px
      padding-right 120px
      h4 {
        padding-bottom 5px
      }

      p {
        font-size 14px
      }
    }

    .share {
      h4 {
        padding-bottom 20px
      }
    }
  }
