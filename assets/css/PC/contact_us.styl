@import 'base.styl'

body{
  background-color: #fff
}
.site_menu{
  padding-left 54px
}
#mainbody>article{
  border-bottom 1px solid $bg-color
  padding 20px 60px 35px

  h3{
    font-size $font-bigs
  }
  .choose_lan{
    margin-top 15px
    padding 10px
    background-color: $bg-color

    h4{
      font-size $font-normal
      font-weight 600
    }

    p{
      display flex
      justify-content center
      padding 12px 0

      span{
        display flex
        align-items center
        padding  0 54px
        img{
          margin-right 5px
        }
      }
    }
  }

  .contact_from{
    padding 15px 300px 0
    font-size $font-normal

    p{
      padding 32px 0 15px
    }

    .from-group{
      padding-top 32px
      label{
        padding-bottom 5px
        display block
        font-weight 600
        span{
          font-weight normal
        }
      }
      input,textarea{
        width 100%
        height 36px
        outline none
        font-size $font-short
      }
      textarea{
        margin-top 20px
        height 200px
        background-color: $bg-color
        border none
        resize none
      }
    }


    button{
      padding 10px 80px
      border none
      background-color: #000
      color #ffffff
      margin 30px 0 0
    }
  }
}